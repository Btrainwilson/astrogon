---
import config from "@/config/config.json";
import { capitalizeFirstLetter } from "@/lib/utils/docsUtils";
import type { SideNavMenuProps } from "@/types/index";

const { items, level } = Astro.props as SideNavMenuProps; // { currentPage, ... }
const pathname: string = new URL(Astro.request.url).pathname;
const {docs_folder} = config.settings;

const { class: className } = Astro.props;
---

<ul class:list={["list-none m-0", className]}>
  {
    items
      .filter((item) => !item.draft && !item.slug.includes("index"))
      .map((item) => {
        const label = item.title
          ? capitalizeFirstLetter(item.title)
          : capitalizeFirstLetter(item.slug.split("/").pop() || "");
        const className = `
        ${level === 0 ? "font-semibold" : "text-muted-foreground"}
        ${pathname === "/" + item.slug ? "text-primary" : "no-underline"}
        `.trim();
        return (
          <li class="w-full">
            <a
              href={`/${docs_folder}/${item.slug}`}
              class={`${className}  text-sm leading-none w-full`}
            >
              {label}
            </a>
            {item.children.length > 0 && (
              <Astro.self items={item.children} level={level + 1} />
            )}
          </li>
        );
      })
  }
</ul>
