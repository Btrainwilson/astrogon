---
import type { BlogEntry } from "@/types";
import Base from "@/layouts/Base.astro";
import SearchComponent from "@/layouts/Search";
import { getSinglePages } from "@/lib/contentParser.astro";

// Retrieve all articles
const posts: BlogEntry[] = await getSinglePages("blog");

// List of items to search in
const searchList = posts.map((item) => ({
  id: item.id,
  data: item.data,
  content: item.body,
}));
---

<Base title={`Search`}>
  <SearchComponent client:load searchList={searchList} />
</Base>
