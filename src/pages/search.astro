---
import type { SearchableEntry } from "@/types";
import Base from "@/layouts/Base.astro";
import SearchComponent from "@/layouts/Search";
import { getSinglePagesPlus } from "@/lib/contentParser.astro";

// Retrieve all articles
const searchList: SearchableEntry[] = await getSinglePagesPlus(["about", "authors", "blog", "docs", "terms"]);
---

<Base title={`Search`}>
  <SearchComponent client:load searchList={searchList} />
</Base>
