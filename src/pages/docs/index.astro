---
import DocGroup from "@layouts/DocGroup.astro";
import { getIndex, getGroups } from "@/lib/contentParser";
import type { DocsEntry } from "@/types";
import { sortByTitle } from "@lib/sortFunctions";

const collectionIndex = (await getIndex("docs")) as DocsEntry;
const groupIndices = (await getGroups("docs", sortByTitle)) as DocsEntry[];
---

<DocGroup entries={groupIndices} collectionIndex={collectionIndex} />
