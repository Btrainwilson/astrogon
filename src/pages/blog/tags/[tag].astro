---
import type { BlogEntry } from "@/types";
import { getPages } from "@/lib/contentParser";
import { getTaxa } from "@/lib/taxonomyParser";
import taxonomyFilter from "@/lib/taxonomyFilter";
import TaxonSingle from "@layouts/TaxonSingle.astro";

export async function getStaticPaths() {
  const taxa = await getTaxa("blog", "tags");
  const paths = taxa.map((taxon) => ({
    params: {
      tag: taxon,
    },
    props: { taxon },
  }));
  return paths;
}

const { taxon } = Astro.props;
const entries = await getPages("blog") as BlogEntry[];
const filteredEntries: BlogEntry[] = taxonomyFilter(entries, "tags", taxon!);
---

<TaxonSingle taxon={taxon} entries={filteredEntries} />
