---
import type { BlogEntry } from "@/types";
import Base from "@/layouts/Base.astro";
import BlogSingle from "@/layouts/BlogSingle.astro";
import { getSinglePages } from "@/lib/contentParser.astro";

export async function getStaticPaths() {
  const posts: BlogEntry[] = await getSinglePages("blog");
  const paths = posts.map((post) => ({
    params: {
      single: post.id,
    },
    props: { post },
  }));
  return paths;
}

const { post } = Astro.props;
const { title, description, image } = post.data;
---

<Base
  title={title}
  description={description}
  image={image?.src}
>
  <BlogSingle post={post} />
</Base>
