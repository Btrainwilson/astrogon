---
import type { AuthorsEntry } from "@/types";
import AuthorGroup from "@layouts/AuthorGroup.astro";
import { getEntries } from "@/lib/contentParser";
import { getIndex } from "@lib/contentParser";
import { sortByTitle } from "@/lib/sortFunctions";

const authorIndex: AuthorsEntry = await getIndex("authors");
const entries = await getEntries("authors", sortByTitle) as AuthorsEntry[];
---

<AuthorGroup authorIndex={authorIndex} entries={entries} />
