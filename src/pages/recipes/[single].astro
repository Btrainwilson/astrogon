---
import type { RecipesEntry } from "@/types";
import RecipeSingle from "@layouts/RecipeSingle.astro";
import { getSinglePages } from "@/lib/contentParser";

export async function getStaticPaths() {
  const entries: RecipesEntry[] = await getSinglePages("recipes");
  const paths = entries.map((entry) => ({
    params: {
      single: entry.id,
    },
    props: { entry },
  }));
  return paths;
}

const { entry } = Astro.props;
---

<RecipeSingle entry={entry} />
