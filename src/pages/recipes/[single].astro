---
import type { RecipesEntry } from "@/types";
import Base from "@layouts/Base.astro";
import RecipeSingle from "@layouts/RecipeSingle.astro";
import { getSinglePages } from "@/lib/contentParser.astro";

export async function getStaticPaths() {
  const posts: RecipesEntry[] = await getSinglePages("recipes");
  const paths = posts.map((post) => ({
    params: {
      single: post.id,
    },
    props: { post },
  }));
  return paths;
}

const { post } = Astro.props;
const { title, description, image } = post.data;
---

<Base
  title={title}
  description={description}
  image={image?.src}
>
  <RecipeSingle post={post} />
</Base>
