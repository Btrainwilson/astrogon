---
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import { upperHumanize } from "@/lib/utils/textConverter";

interface Props {
  title?: string;
}

const { title = "" }: Props = Astro.props;
---

<section>
  <div class="container text-center -mb-8">
    <div class="rounded-lg p-0 bg-gradient-to-t gradient-1c">
      <div class="rounded-lg glass px-8 py-6">
        <h1 set:text={upperHumanize(title)} />
        <Breadcrumbs className="mt-4" />
      </div>
    </div>
  </div>
</section>
