---
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import { upperHumanize } from "@/lib/utils/textConverter";

interface Props {
  title?: string;
}

const { title = "" }: Props = Astro.props;
---

<section>
  <div class="container text-center -mb-8">
    <div class="rounded-md bg-gradient-to-b from-transparent via-transparent to-text p-0.5 dark:to-darkmode-text">
      <div class="rounded-md bg-body dark:bg-darkmode-body px-8 py-6">
        <h1 set:text={upperHumanize(title)} />
        <Breadcrumbs className="mt-4" />
      </div>
    </div>
  </div>
</section>
