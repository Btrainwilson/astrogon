---
import DocCard from "@/components/DocCard.astro";
import PageHeader from "@/components/PageHeader.astro";
import type { DocsEntry } from "@/types";
import { getEntry } from "astro:content";

interface Props {
  documents: DocsEntry[];
}

const { documents } = Astro.props;
const postIndex = await getEntry("docs", "index");

const hide_sidenav = false;
const max_width = false;
---

<PageHeader title={postIndex.data.title} />
<section class="section">
  <div class="container">
    <div class="row">
      {
        documents.map((doc) => (
          <div class="mb-4 md:mb-8 md:col-6 lg:col-4">
            <DocCard data={doc} />
          </div>
        ))
      }
    </div>
  </div>
</section>
