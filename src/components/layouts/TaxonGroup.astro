---
import Base from "@layouts/Base.astro";
import { upperHumanize } from "@/lib/utils/textConverter";
import PageHeader from "@components/PageHeader.astro";
import Button from "@components/Button.astro";
import type { CollectionKey } from "astro:content";

interface Props {
  collection: CollectionKey;
  taxonomy: string;
  taxa: string[];
  allTaxa: string[];
}

const { collection, taxonomy, taxa, allTaxa }: Props = Astro.props;
---

<Base title={upperHumanize(taxonomy)}>
  <PageHeader title={upperHumanize(taxonomy)} />
  <section class="section">
    <div class="container text-center">
      <ul>
        {
          taxa.map((taxon: string) => {
            const count = allTaxa.filter((c) => c === taxon).length;
            return (
              <li class="m-3 inline-block">
                <Button
                  label=`${upperHumanize(taxon)} (${count})`
                  link={`/${collection}/${taxonomy}/${taxon}`}
                  hoverInvert
                />
              </li>
            );
          })
        }
      </ul>
    </div>
  </section>
</Base>
