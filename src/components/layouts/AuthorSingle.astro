---
import type { AuthorsData } from "@/types";
import BlogCard from "@components/BlogCard.astro";
import Social from "@components/Social.astro";
import Base from "@layouts/Base.astro";
import { Image } from "astro:assets";

interface Props {
  data: AuthorsData;
}

const { data } = Astro.props;
const { title, social, description, image, imageAlt } = data;
---

<Base title={title} description={description} image={image?.src}>
  <section class="section-sm pb-0">
    <div class="container">
      <div
        class="row justify-center border-b border-border pb-14 dark:border-darkmode-border"
      >
        <div class="glass rounded-lg p-4 text-center lg:col-4">
          {
            image && (
              <Image
                src={image}
                class="mx-auto mb-10 rounded"
                height={200}
                width={200}
                alt={imageAlt}
                format="webp"
              />
            )
          }
          <h1 class="h3 mb-6">{title}</h1>
          <div class="content">
            <slot name="content" />
          </div>
          <Social source={social} className="social-icons" />
        </div>
      </div>

      <div class="row justify-center pb-16 pt-14">
        <slot name="authoredPosts" />
      </div>
    </div>
  </section>
</Base>
