---
import Base from "@layouts/Base.astro";
import { markdownify } from "@/lib/textConverter";
import { Image } from "astro:assets";
import profile from "@assets/profile/avatar.png";
import type { AboutEntry } from "@/types";
import { render } from "astro:content";

interface Props {
  entry: AboutEntry;
}

const { entry } = Astro.props;
const { title, description, image, imageAlt } = entry.data;
const { Content } = await render(entry);
---

<Base title={title} description={description} image={image?.src}>
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="glass rounded-lg text-center p-8 md:col-10 lg:col-7">
          {
            profile && (
              <Image
                class="mx-auto mb-6 rounded-lg  w-64"
                src={profile}
                width={1024}
                height={1024}
                alt={imageAlt}
                format="webp"
              />
            )
          }
          <h2 set:html={markdownify(title)} class="h3 mb-6" />
          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
