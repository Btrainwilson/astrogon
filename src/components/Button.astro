---
interface Props {
  label: string;
  link?: string;
  newtab?: boolean;
  type?: "primary" | "secondary";
  color?: string;
  hoverInvert?: boolean;
}

const { label, link, newtab=false, type="primary", color, hoverInvert=false }: Props = Astro.props;
---

<a 
  href={link} 
  target=`${newtab ? "_blank" : ""}`
  class=`no-underline inline-block group ${hoverInvert ? "hover:opacity-100" : ""}`
>
  <div class=`
    ${color ? color : "bg-light dark:bg-darkmode-light"}
    ${type == "primary" ? "p-0.5 rounded-md" : "p-[1.5px] rounded-sm"}`
  >
    <div class=`bg-body dark:bg-darkmode-body
      ${type == "primary" ? "px-4 py-2 rounded-md" : "px-2 py-0.5 rounded-sm"}
      ${hoverInvert ? "group-hover:bg-opacity-0" : ""}`
    >
      <div class=`text-transparent bg-clip-text
        ${color ? color : "bg-light dark:bg-darkmode-light"}
        ${type == "primary" ? "font-bold" : ""}
        ${hoverInvert ? "group-hover:text-body dark:group-hover:text-darkmode-body" : ""}`
      >
        {label}
      </div>
    </div>
  </div>
</a>
